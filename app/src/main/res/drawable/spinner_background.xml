<!-- res/drawable/spinner_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set a solid color background -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: Add a stroke for the border -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Light gray border color -->

    <!-- Optional: Add padding for inner spacing -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
